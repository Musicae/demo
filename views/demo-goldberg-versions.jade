                  iframe(src="https://embed.spotify.com/?uri=spotify%3Aalbum%3A3I7yCh1xt7hDlkT8FnXmNI" width="100%" height="380" frameborder="0" allowtransparency="true")
              div.comment-div
                p: strong Andreas Staier, 2015


      //- ORGAN VERSIONS
      div.container-fluid#container-versions
        h4 Organ Versions
        div.row
          div.col-xs-12.col-sm-6.col-lg-4
            div.info-box-content
              div.perfomer-img-div(style='background-image:url("/images/glenn-gould-1981.jpg")')
